generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User {
  id String @id @db.VarChar(16)
  name String @db.VarChar(255)
  email String @unique @db.VarChar(320)
  password String @db.Text
  role Role @relation(fields: [roleId], references: [id])
  roleId String @db.VarChar(16) @map("role_id")
  articles Article[]

  @@map("users")
}

model Role {
  id String @id @db.VarChar(16)
  name String @db.VarChar(100) @unique
  members User[]

  @@map("roles")
}

model Article {
  id String @id @db.VarChar(16)
  author User @relation(fields: [authorId], references: [id])
  authorId String @db.VarChar(16) @map("author_id")
  title String @db.VarChar(255)
  content String @db.Text
  createdAt DateTime @db.Timestamp @default(now()) @map("created_at")
  updatedAt DateTime @db.Timestamp @default(now()) @map("updated_at")

  @@map("articles")
}
