generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User {
  id String @id @db.VarChar(16)
  name String @db.VarChar(255)
  email String @unique @db.VarChar(320)
  password String @db.Text
  admin Admin?
  applicant Applicant?

  @@map("users")
}

model Admin {
  id String @id @db.VarChar(16)
  userId String @db.VarChar(16) @unique @map("user_id")
  user User @relation(fields: [userId], references: [id])
  articles Article[]

  @@map("admins")
}

model Article {
  id String @id @db.VarChar(16)
  authorId String @db.VarChar(16) @map("author_id")
  author Admin @relation(fields: [authorId], references: [id])
  title String @db.VarChar(255)
  content String @db.Text
  createdAt DateTime @db.Timestamp @default(now()) @map("created_at")
  updatedAt DateTime @db.Timestamp @default(now()) @map("updated_at")
  tags ArticleTag[]
  event Event?
  ebook Ebook?

  @@map("articles")
}

model ArticleTag {
  id String @id @db.VarChar(16)
  articleId String @db.VarChar(16) @map("article_id")
  article Article @relation(fields: [articleId], references: [id])
  name String @db.VarChar(100)

  @@map("article_tags")
}

model Event {
  id String @id @db.VarChar(16)
  articleId String @db.VarChar(16) @unique @map("article_id")
  article Article @relation(fields: [articleId], references: [id])
  startedAt DateTime @db.Timestamp @map("started_at")

  @@map("events")
}

model Ebook {
  id String @id @db.VarChar(16)
  articleId String @db.VarChar(16) @unique @map("article_id")
  article Article @relation(fields: [articleId], references: [id])
  fileName String @db.VarChar(255) @map("file_name")

  @@map("ebooks")
}

model Applicant {
  id String @id @db.VarChar(16)
  userId String @db.VarChar(16) @unique @map("user_id")
  user User @relation(fields: [userId], references: [id])
  address String @db.Text

  @@map("applicants")
}
